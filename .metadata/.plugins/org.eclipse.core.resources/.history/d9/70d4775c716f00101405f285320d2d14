package com.project.controller;


import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.project.entity.UserDetails;

@RestController
public class UserDetailsController {
	
	@PostMapping(path = "/add/user/first", consumes = MediaType.APPLICATION_XML_VALUE)
	public String addUserDetails1(@RequestBody UserDetails userDetails) {
		System.out.println(userDetails);
		return "User details Added Successfully...!";	
	}
	
	@PostMapping(path = "/add/user/second", consumes = {MediaType.APPLICATION_XML_VALUE, MediaType.APPLICATION_JSON_VALUE})
    public String addUserDetails2(@RequestBody UserDetails userDetails) {
        System.out.println(userDetails);

        return "User details added successfully!";
    }
}
