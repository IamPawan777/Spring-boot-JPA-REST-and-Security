package com.project.exception;

import java.util.List;
import java.util.Map;
import java.util.stream.Collectors;

import org.springframework.http.ResponseEntity;
import org.springframework.validation.FieldError;
import org.springframework.web.bind.MethodArgumentNotValidException;
import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.bind.annotation.ExceptionHandler;

import jakarta.servlet.http.HttpServletRequest;

@ControllerAdvice
public class GlobleExceptionHandler {
	
	@ExceptionHandler(MethodArgumentNotValidException.class)
	public ResponseEntity<?> hendleMathodArgumentNotValidException(MethodArgumentNotValidException exception, HttpServletRequest request){
		List<FieldError> errors = (List<FieldError>) exception.getFieldError();
		
		Map<String, String> response = errors.stream().collect(Collectors.toMap(e -> e.getField(), e->e.getDefaultMessage()));
		return ResponseEntity.badRequest().body(response);
	}
}
