package com.project.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.project.dto.ProductCard;
import com.project.dto.ProductInfo;
import com.project.dto.ProductResponce;
import com.project.service.CunsumerService;

@RestController
@RequestMapping("/product")
public class CunsumerController {
	
	@Autowired
	CunsumerService cunsumerService;
	
	// add product
	@PostMapping("/post/info")
	public ProductResponce createInformation() {
		System.out.println("Consumer...");
		return cunsumerService.createInformation();
	}
	
	
	
	// get all product
	@GetMapping("/get/info")
	public List<ProductInfo> getInformation(){
		return cunsumerService.getInformation();
	}
	
	
	
	// get one
	@GetMapping("/get/product/info/{pid}")
	public ProductInfo productCards(@PathVariable int pid){
		return cunsumerService.getCardById(pid);
	}
}
